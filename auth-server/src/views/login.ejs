<h1><%= title %></h1>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="error"><%= error %></div>
<% } %>

<form method="POST" action="/interaction/<%= uid %>/login">
  <div class="form-group">
    <label for="email">Email Address</label>
    <input type="email" id="email" name="email" placeholder="you@example.com" required autofocus>
  </div>

  <button type="submit" class="btn btn-primary">Continue</button>
</form>

<div style="margin-top: 1rem; text-align: center;">
  <form method="POST" action="/interaction/<%= uid %>/abort" style="display: inline;">
    <button type="submit" class="btn btn-secondary">Cancel</button>
  </form>
</div>

<% if (typeof isPaymentFlow !== 'undefined' && isPaymentFlow) { %>
  <p style="margin-top: 1.5rem; font-size: 0.75rem; color: #999; text-align: center;">
    You'll select a payment card after signing in.
  </p>
<% } %>
