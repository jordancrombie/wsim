<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - WSIM Wallet</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 1rem;
    }
    .popup-container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
      max-width: 400px;
      margin: 0 auto;
      overflow: hidden;
    }
    .popup-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 1.5rem;
      text-align: center;
    }
    .popup-header h1 { font-size: 1.25rem; font-weight: 600; }
    .popup-header .logo { font-size: 2rem; margin-bottom: 0.5rem; }
    .popup-content { padding: 1.5rem; }
    .payment-info {
      background: #f8f9fc;
      border-radius: 12px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      text-align: center;
    }
    .payment-info .merchant { color: #666; font-size: 0.875rem; }
    .payment-info .amount { font-size: 1.75rem; font-weight: 700; color: #333; margin-top: 0.25rem; }
    .card-list { display: flex; flex-direction: column; gap: 0.75rem; margin-bottom: 1.5rem; }
    .card-option {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.2s;
    }
    .card-option:hover { border-color: #667eea; background: #f8f9fc; }
    .card-option.selected { border-color: #667eea; background: #f0f1ff; }
    .card-option .card-icon { font-size: 1.5rem; }
    .card-option .card-info { flex: 1; }
    .card-option .card-type { font-weight: 600; color: #333; }
    .card-option .card-number { color: #666; font-size: 0.875rem; font-family: monospace; }
    .card-option .card-bank { color: #999; font-size: 0.75rem; }
    .card-option .checkmark {
      width: 24px; height: 24px;
      border: 2px solid #e5e7eb;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s;
    }
    .card-option.selected .checkmark { background: #667eea; border-color: #667eea; color: white; }
    .btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      width: 100%;
      padding: 1rem 1.5rem;
      border: none;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    .btn-primary:hover { transform: translateY(-1px); box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4); }
    .btn-primary:disabled { opacity: 0.6; cursor: not-allowed; transform: none; box-shadow: none; }
    .btn-secondary { background: #f3f4f6; color: #666; margin-top: 0.75rem; }
    .btn-secondary:hover { background: #e5e7eb; }
    .empty-state { text-align: center; padding: 2rem; color: #666; }
    .empty-state .icon { font-size: 3rem; margin-bottom: 1rem; }
    .loading-overlay {
      display: none;
      position: fixed;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(255,255,255,0.9);
      z-index: 100;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    .spinner {
      width: 40px; height: 40px;
      border: 3px solid #e5e7eb;
      border-top-color: #667eea;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
    @keyframes spin { to { transform: rotate(360deg); } }
  </style>
</head>
<body>
  <div class="popup-container">
    <div class="popup-header">
      <div class="logo">&#128179;</div>
      <h1><%= title %></h1>
    </div>
    <div class="popup-content">
      <% if (payment && (payment.amount || payment.merchantName)) { %>
        <div class="payment-info">
          <div class="merchant">Payment to <%= payment.merchantName %></div>
          <% if (payment.amount) { %>
            <div class="amount">$<%= payment.amount.toFixed(2) %> <%= payment.currency || 'CAD' %></div>
          <% } %>
        </div>
      <% } %>

      <% if (cards && cards.length > 0) { %>
        <div class="card-list" id="cardList">
          <% cards.forEach(function(card, index) { %>
            <div class="card-option <%= index === 0 ? 'selected' : '' %>"
                 data-card-id="<%= card.id %>"
                 data-last4="<%= card.lastFour %>"
                 data-brand="<%= card.cardType.toLowerCase() %>"
                 onclick="selectCard(this)">
              <div class="card-icon">&#128179;</div>
              <div class="card-info">
                <div class="card-type"><%= card.cardType %></div>
                <div class="card-number">**** **** **** <%= card.lastFour %></div>
                <div class="card-bank">via <%= card.enrollment.bsimId %></div>
              </div>
              <div class="checkmark">&#10003;</div>
            </div>
          <% }); %>
        </div>

        <% if (hasPasskeys) { %>
          <button type="button" class="btn btn-primary" id="payBtn" onclick="initiatePayment()">
            &#128274; Confirm with Passkey
          </button>
        <% } else { %>
          <button type="button" class="btn btn-primary" id="payBtn" onclick="initiateSimplePayment()">
            Confirm Payment
          </button>
        <% } %>

        <button type="button" class="btn btn-secondary" onclick="handleCancel()">
          Cancel
        </button>
      <% } else { %>
        <div class="empty-state">
          <div class="icon">&#128179;</div>
          <p>No cards available</p>
          <p style="font-size: 0.875rem; margin-top: 0.5rem;">
            Please add a card to your wallet first.
          </p>
        </div>
        <button type="button" class="btn btn-secondary" onclick="handleCancel()">
          Close
        </button>
      <% } %>
    </div>
  </div>

  <div class="loading-overlay" id="loadingOverlay">
    <div class="spinner"></div>
    <p style="margin-top: 1rem; color: #666;">Processing...</p>
  </div>

  <script src="https://unpkg.com/@simplewebauthn/browser/dist/bundle/index.umd.min.js"></script>
  <script>
    const ALLOWED_ORIGIN = '<%= allowedOrigin %>';
    const paymentData = {
      merchantId: '<%= payment?.merchantId || "" %>',
      merchantName: '<%= payment?.merchantName || "" %>',
      amount: <%= payment?.amount || 'null' %>,
      currency: '<%= payment?.currency || "CAD" %>',
      orderId: '<%= payment?.orderId || "" %>'
    };
    const userId = '<%= userId %>';
    const hasPasskeys = <%= hasPasskeys ? 'true' : 'false' %>;

    let selectedCard = document.querySelector('.card-option.selected');

    function sendToOpener(message) {
      if (window.opener && !window.opener.closed && ALLOWED_ORIGIN) {
        window.opener.postMessage(message, ALLOWED_ORIGIN);
      }
    }

    function closePopup() {
      window.close();
    }

    function sendAndClose(message) {
      sendToOpener(message);
      setTimeout(closePopup, 100);
    }

    function handleCancel() {
      sendAndClose({ type: 'wsim:cancelled', reason: 'user' });
    }

    function handleError(code, message) {
      sendAndClose({ type: 'wsim:error', code: code, message: message });
    }

    function selectCard(element) {
      document.querySelectorAll('.card-option').forEach(c => c.classList.remove('selected'));
      element.classList.add('selected');
      selectedCard = element;
    }

    function showLoading(show) {
      document.getElementById('loadingOverlay').style.display = show ? 'flex' : 'none';
      document.getElementById('payBtn').disabled = show;
    }

    async function initiatePayment() {
      if (!selectedCard) {
        alert('Please select a card');
        return;
      }

      showLoading(true);

      try {
        const walletCardId = selectedCard.dataset.cardId;

        // Get passkey options
        const optionsRes = await fetch('/popup/passkey/options', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            userId: userId,
            walletCardId: walletCardId,
            merchantName: paymentData.merchantName,
            amount: paymentData.amount,
            currency: paymentData.currency
          })
        });

        if (!optionsRes.ok) {
          const error = await optionsRes.json();
          throw new Error(error.error || 'Failed to get passkey options');
        }

        const options = await optionsRes.json();
        const challengeKey = options._challengeKey;

        // Start passkey authentication
        const credential = await SimpleWebAuthnBrowser.startAuthentication({ optionsJSON: options });

        // Verify passkey and get token
        const verifyRes = await fetch('/popup/passkey/verify', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            response: credential,
            _challengeKey: challengeKey,
            walletCardId: walletCardId,
            merchantId: paymentData.merchantId,
            merchantName: paymentData.merchantName,
            amount: paymentData.amount,
            currency: paymentData.currency,
            origin: ALLOWED_ORIGIN
          })
        });

        if (!verifyRes.ok) {
          const error = await verifyRes.json();
          throw new Error(error.error || 'Payment verification failed');
        }

        const result = await verifyRes.json();

        sendAndClose({
          type: 'wsim:card-selected',
          token: result.token,
          cardToken: result.cardToken,
          cardLast4: result.cardLast4,
          cardBrand: result.cardBrand,
          expiresAt: result.expiresAt,
          sessionToken: result.sessionToken,
          sessionTokenExpiresIn: result.sessionTokenExpiresIn
        });

      } catch (error) {
        console.error('Payment error:', error);
        showLoading(false);

        if (error.name === 'NotAllowedError') {
          handleError('passkey_cancelled', 'Passkey authentication was cancelled');
        } else {
          handleError('payment_failed', error.message || 'Payment failed');
        }
      }
    }

    async function initiateSimplePayment() {
      if (!selectedCard) {
        alert('Please select a card');
        return;
      }

      showLoading(true);

      try {
        const walletCardId = selectedCard.dataset.cardId;

        const res = await fetch('/popup/select-card-simple', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({
            walletCardId: walletCardId,
            merchantId: paymentData.merchantId,
            merchantName: paymentData.merchantName,
            amount: paymentData.amount,
            currency: paymentData.currency,
            origin: ALLOWED_ORIGIN
          })
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error || 'Payment failed');
        }

        const result = await res.json();

        sendAndClose({
          type: 'wsim:card-selected',
          token: result.token,
          cardToken: result.cardToken,
          cardLast4: result.cardLast4,
          cardBrand: result.cardBrand,
          expiresAt: result.expiresAt,
          sessionToken: result.sessionToken,
          sessionTokenExpiresIn: result.sessionTokenExpiresIn
        });

      } catch (error) {
        console.error('Payment error:', error);
        showLoading(false);
        handleError('payment_failed', error.message || 'Payment failed');
      }
    }
  </script>
</body>
</html>
